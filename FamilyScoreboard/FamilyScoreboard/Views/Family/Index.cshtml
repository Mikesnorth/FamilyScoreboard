@model FamilyScoreboard.ViewModels.Family

@{
    ViewData["Title"] = "Index";
}

<div>
    <h4>Family</h4>
    <div class="row">
        @foreach (var member in Model.FamilyMembers) {
            <div class="col-lg-3 card">
                <h3>@member.PreferredName
                    <span class="float-right">
                        <a asp-action="Details" asp-route-id="@member.Id"><i class="fas fa-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@member.Id" disabled><i class="far fa-edit"></i></a>
                        <a asp-action="Remove" asp-route-id="@member.Id"><i class="far fa-trash-alt"></i></a>
                    </span>
                </h3>
            </div>
        }
    </div>
    <hr />
    <br />
    <h3>Add a new Family Member</h3>
        @using (Html.BeginForm("Add", "Family", FormMethod.Post)) {
            <div class="row">
                <div class="col-sm-3">
                    @Html.LabelFor(m => m.newMemberFirstName)
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.newMemberFirstName, null, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.LabelFor(m => m.newMemberLastName)
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.newMemberLastName, null, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.LabelFor(m => m.newMemberPreferredName)
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.newMemberPreferredName, null, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.LabelFor(m => m.newMemberDateOfBirth)
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.newMemberDateOfBirth, null, new { @class = "form-control date-picker" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Add Member</button>
        }
</div>
